<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_number"
    android:clickable="true"
    android:focusable="true">


    <ImageButton
        android:id="@+id/catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/catalog"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivSlot"
        android:layout_width="311dp"
        android:layout_height="487dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/slot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSlotBall"
        android:layout_width="73dp"
        android:layout_height="55dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="259dp"
        android:src="@drawable/slotball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivQuestion1"
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSlot" />

    <ImageView
        android:id="@+id/ivQuestion2"
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSlot" />

    <ImageView
        android:id="@+id/ivQuestion3"
        android:layout_width="50dp"
        android:layout_height="118dp"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="264dp"
        android:src="@drawable/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGo"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="275dp"
        android:text="Start"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
